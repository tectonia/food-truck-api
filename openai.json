{
    "swagger": "2.0",
    "info": {
        "title": "Food Truck API",
        "description": "An API to get the location of food trucks near you in San Francisco.",
        "version": "1.0.0"
    },
    "host": "foodtrucksmm.azurewebsites.net",
    "schemes": [
        "http",
        "https"
    ],
    "securityDefinitions": {
        "apiKeyHeader": {
            "type": "apiKey",
            "name": "Ocp-Apim-Subscription-Key",
            "in": "header"
        },
        "apiKeyQuery": {
            "type": "apiKey",
            "name": "subscription-key",
            "in": "query"
        }
    },
    "security": [
        {
            "apiKeyHeader": []
        },
        {
            "apiKeyQuery": []
        }
    ],
    "paths": {
        "/trucks": {
            "get": {
                "description": "A list of 5 closest food trucks.",
                "operationId": "GetTrucks",
                "parameters": [
                    {
                        "name": "longitude",
                        "in": "query",
                        "type": "float"
                    },
                    {
                        "name": "latitude",
                        "in": "query",
                        "type": "float"
                    },
                    {
                        "name": "number",
                        "in": "query",
                        "type": "integer",
                        "default": 5
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK"
                    }
                },
                "produces": [
                    "application/vnd.collection+json"
                ]
            }
        },
        "/trucks/{locationid}": {
            "get": {
                "description": "Get representation of a single food truck by id.",
                "operationId": "GetTruck",
                "parameters": [
                    {
                        "$ref": "#/parameters/locationid"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK"
                    }
                },
                "produces":  [
                    "application/hal+json",
                    "text/plain"
                ]
            }
        }
    },
    "parameters": {
        "locationid": {
            "name": "locationid",
            "in": "path",
            "description": "Format - int32.",
            "required": true,
            "type": "integer"
        }
    }
}